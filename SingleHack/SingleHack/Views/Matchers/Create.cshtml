@model SingleHack.Models.Matcher

@{
    ViewData["Title"] = "Create";
}

<head>
    <link rel="stylesheet" href="site.css">
    <link href="https://fonts.googleapis.com/css?family=Merriweather" rel="stylesheet">
</head>

<h1>Welcome matchmaker!</h1>
<h1>To get started, please select an username.</h1>

<hr />
<div class="row">
    <div class="col" style="text-align: left; max-width: 300px">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Username</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" style="color:#ffb3b3ff;"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="" asp-controller="Home" asp-action="Index" class="buttom" style="color:#ffb3b3ff;font-size:20px">&laquo; Back to Main Page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
