@model SingleHack.Models.Person

@{
    ViewData["Title"] = "Create";
}
<head>
    <link rel="stylesheet" href="site.css">
    <link href="https://fonts.googleapis.com/css?family=Merriweather" rel="stylesheet">
</head>
<h1>To be a Dater!</h1>

<hr />
<div class="row" style="text-align: center;
vertical-align: middle;
line-height: 90px; ">
    <div class="col-lg-6" style="text-align: center;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="text-align: left;">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="text-align: left;">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group" style="text-align: left;">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group" style="text-align: left;">
                <label asp-for="Comment" class="control-label"></label>
                <!--<input  style="height:100px;"/>-->
                <textarea asp-for="Comment" class="form-control" cols="40" rows="5"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group" style="text-align: left;">
                <input type="submit" value="Create" class="btn btn-default" style="color:#ffb3b3ff;"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="" asp-controller="Home" asp-action="Index" class="buttom" style="color:#ffb3b3ff;font-size:20px">&laquo; Back to Main Page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
